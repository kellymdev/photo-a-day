<p><%= link_to(@photo.subject.category.name, category_path(@photo.subject.category)) %> | <%= link_to(@photo.subject.name, subject_path(@photo.subject)) %></p>

<p>Date taken: <%= @photo.date %></p>

<% if @photo.image_url.present? %>
  <%= image_tag(@photo.image_url, alt: @photo.subject.name) %>
<% end %>

<% if @photo.notes.present? %>
  <p><%= @photo.notes %></p>
<% end %>

<p><%= link_to('Edit Photo', edit_photo_path(@photo)) %> | <%= link_to('Delete Photo', photo_path(@photo), data: { confirm: 'Are you sure?' }, method: :delete) %></p>