<h2>Add New Photo</h2>

<%= form_for @photo do |f| %>
  <%= f.label :subject %>
  <%= f.collection_select(:subject_id, @subjects, :id, :name) %>

  <%= f.label :date %>
  <%= f.date_select :date %>

  <%= f.label :image_url %>
  <%= f.text_field :image_url %>

  <%= f.label :notes %>
  <%= f.text_area :notes %>

  <%= f.submit 'Add Photo' %>
<% end %>
